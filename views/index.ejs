<body>

<div class="form">
          
      <div class="tab-content">
        <div id="main">   
                  
          <form action="/add" method="post">
          
          <h3> Add Record (POST) </h3>
          
          <div class="top-row">
            <div class="field-wrap">
              <label>
                Username : <span class="req"></span>
              </label>
              <input type="text" name="username" required autocomplete="off" />
            </div>
        
            <div class="field-wrap">
              <label>
                Password : <span class="req"></span>
              </label>
              <input type="text" name="password" required autocomplete="off"/>
            </div>
          </div>
          
          
		

          
          <button type="submit" class="button button-block"/>Add</button>
          
          </form>

        </div>
        
      </div>  
</div> 
</div>

--------------------------------------------------------------------------------------------------------------------------------
<div class="form">
          
      <div class="tab-content">
        <div id="main">   
                  
          <form action="/view" method="get">
          
          <h3> Read all records (GET all) </h3>
          
          <button type="submit" class="button button-block"/>View All</button>
          
          </form>

        </div>
        
      </div>  
</div> 
</div>

